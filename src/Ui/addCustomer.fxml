<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="230.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddCustomerController">
   <children>
      <Label fx:id="customerTitle" text="Add customer to database">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="customerIdLabel" />
      <TextField fx:id="customerName" alignment="CENTER" maxWidth="150.0" promptText="Customer name" />
      <TextField fx:id="customerAddress" alignment="CENTER" maxWidth="150.0" promptText="Address Id" />
      <TextField fx:id="customerPhone" alignment="CENTER" maxWidth="150.0" promptText="Phone number" />
      <TextField fx:id="customerBilling" alignment="CENTER" maxWidth="150.0" promptText="Billing account" />
      <Button fx:id="customerAdd" mnemonicParsing="false" onAction="#addCustomer" text="Submit" />
   </children>
</VBox>
